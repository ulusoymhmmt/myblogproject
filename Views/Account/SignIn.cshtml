@model AppUserLoginModel

@{
    Layout = null;  
    @* Layout u kullanmamasi icin yaptik *@
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giris</title>
      <!-- Bootstrap core CSS -->
  <link href="~/lib/twitter-bootstrap/css/simplex.css" rel="stylesheet">

  <!-- Custom styles for this template in vendor file -->
  <link href="~/lib/twitter-bootstrap/csspadding/blog-home.css" rel="stylesheet">
</head>
<body>

    <form asp-action="SignIn" method="POST" class="w-50 mt-5 p-3 mx-auto shadow">  
    @* a etiketinde asp-action ve route direk icine yazillirdi ama burda form etiketinin icerisine yazdik asp action u ve route yerine method ismi *@

<div class="form-group">
    <label for="UserName">Kullanici Adi</label>
    <input asp-for="UserName"class="form-control">
</div>
<div class="form-group">
    <label for="Password">Sifre</label>
    <input asp-for="Password" class="form-control">
</div>

<div class="form-group">
    <button type="submit" class="btn btn-info btn-block">Giris Yap</button>
</div>
</form>
</body>
</html>

